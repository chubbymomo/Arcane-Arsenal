# Arcane Arsenal Configuration
# Copy this file to .env and fill in your values

# === API Keys ===
# Get your Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# === Server Settings ===
HOST=0.0.0.0
PORT=5000
DEBUG=False
SECRET_KEY=change-this-to-a-random-secret-in-production

# === Logging ===
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=arcane_arsenal.log  # Leave empty for console only

# === AI DM Settings ===
# Which provider to use: 'anthropic' or 'openai'
AI_PROVIDER=anthropic

# Model to use
# Anthropic: claude-sonnet-4-5-20250929, claude-3-5-sonnet-20240620, claude-3-opus-20240229
# OpenAI: gpt-4-turbo-preview, gpt-3.5-turbo
AI_MODEL=claude-sonnet-4-5-20250929

# Token limits and temperature
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# Context settings
AI_MAX_CONTEXT_MESSAGES=10  # How many conversation messages to include
AI_MAX_CONTEXT_EVENTS=5     # How many recent events to include
AI_INCLUDE_NEARBY_ENTITIES=True  # Include nearby NPCs/objects in context

# Custom system prompt path (optional)
# AI_SYSTEM_PROMPT_PATH=custom_prompts/my_dm_system.txt

# === Database ===
WORLDS_DIR=worlds

# === Security (for production) ===
ENABLE_CORS=False
ALLOWED_ORIGINS=*
